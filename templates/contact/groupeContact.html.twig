{% block javaScripts %}
    <script>
        function funcAjout() {
            var nomAj = $("#nomAj").val();
                $.ajax({
                    url: '/groupeContactAjout/',
                    data: "nomAj=" + nomAj,
                    success: function (data) {
                        if(data === 1){
                            Swal.fire({
                                title: "",
                                icon: 'success',
                                text: "Opération effectuer avec suucès.",
                                type: "success",
                            });
                        } else if(data === 2){
                            Swal.fire({
                                title: "error",
                                text: "Groupe déjà existant",
                                icon: "error",
                                type: "error",
                            });
                            // location.reload();
                        } else if(data === 3){
                            Swal.fire({
                                title: "error",
                                text: "Veuillez remplir le nom du groupe pour valider",
                                icon: "error",
                                type: "error",
                            });
                            // location.reload();
                        }
                    },
                    error: function (data) {
                        location.reload();
                    },
                });
        }
    </script>

    <script>
        function fundelete(id) {
            Swal.fire({
                title: "Etes-vous sûr?",
                icon: 'warning',
                text: "Après la suppression le groupe sera supprimé définitivement.",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Supprimer !",
                cancelButtonText: "Annuler",
                closeOnConfirm: false,
                closeOnCancel: false,
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/groupeContactDelete/' + id + '/',
                        dataType: 'json',
                        async: true,
                        success: function (data) {
                            location.reload();
                        },
                        error: function (data) {
                            location.reload();
                        },
                    });
                } else if (result.isDenied) {
                    Swal.fire('Changes are not saved', '', 'info')
                }
            })
        }


    </script>

