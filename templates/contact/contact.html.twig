{% block javaScripts %}
    <script>
        function fundelete(id) {
            Swal.fire({
                title: "Etes-vous sûr?",
                icon:'warning',
                text: "Après la suppression le contact sera supprimé définitivement.",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Supprimer !",
                cancelButtonText: "Annuler",
                closeOnConfirm: false,
                closeOnCancel: false,
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/supprimerContact/' + id + '/',
                        dataType: 'json',
                        async: true,
                        success: function (data) {
                            location.reload();
                        },
                        error: function (data) {
                            location.reload();
                        },
                    });
                } else if (result.isDenied) {
                    Swal.fire('Changes are not saved', '', 'info')
                }
            })
        }


    </script>
