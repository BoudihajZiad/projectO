{% extends "base.html.twig" %}

{% block styleSheets %}
{% endblock %}

{% block bodytag %}
    onload="funcChargLoad2();"
{% endblock %}
{% block content %}
    <div class="right_col" role="main">
            <h3>Gestion campagne</h3>
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Liste des campagnes</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                    <tr>
                                        <th>Numero</th>
                                        <th>Nom</th>
                                        <th>Canal</th>
                                        <th>Type</th>
                                        <th>Categorie</th>
                                        <th>Planification</th>
                                        <th>Description</th>
                                        <th>Silence</th>
                                        <th>Categorie promotionnelle</th>
{#                                        <th>Label</th>#}
{#                                        <th colspan="2" class="text-center">Message</th>#}
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for campagne in campagnes %}
                                        <tr>
                                            <td>{{ campagne.id }}</td>
                                            <td>{{ campagne.nom }}</td>
                                            <td>{{ campagne.type }}</td>
                                            <td>{{ campagne.canal }}</td>
                                            <td>{{ campagne.categorie }}</td>
                                            <td>{{ campagne.planification }}</td>
                                            <td>{{ campagne.description }}</td>
                                            <td>{{ campagne.silence }}</td>
                                            <td>{{ campagne.categoriePromotionnelle }}</td>
{#                                            <td>{{ campagne.label }}</td>#}
{#                                            <td>{{ campagne.titreMessage }}: {{ campagne.corpsMessage }}</td>#}
                                            <td><a href="/exportCampagne/{{ campagne.id }}/" class="btn-default btn-success p-2"><i class="fa fa-download"></i> Export</a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javaScripts %}

{% endblock %}
